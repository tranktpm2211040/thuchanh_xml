{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema cho Danh sách Sản phẩm",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "ten_san_pham": {
        "description": "Tên của sản phẩm",
        "type": "string"
      },
      "gia_tien": {
        "description": "Giá bán của sản phẩm (tính bằng VND)",
        "type": "number",
        "minimum": 0
      },
      "so_luong_ton_kho": {
        "description": "Số lượng sản phẩm còn lại trong kho",
        "type": "integer",
        "minimum": 0
      },
      "danh_muc": {
        "description": "Danh mục của sản phẩm",
        "type": "string"
      }
    },
    "required": ["ten_san_pham", "gia_tien", "so_luong_ton_kho", "danh_muc"]
  }
}
