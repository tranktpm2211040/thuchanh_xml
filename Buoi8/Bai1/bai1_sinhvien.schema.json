{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema cho Sinh viên",
  "type": "object",
  "properties": {
    "ho_ten": {
      "description": "Họ và tên đầy đủ của sinh viên",
      "type": "string"
    },
    "tuoi": {
      "description": "Tuổi của sinh viên",
      "type": "integer",
      "minimum": 18
    },
    "gioi_tinh": {
      "description": "Giới tính của sinh viên",
      "type": "string",
      "enum": ["Nam", "Nữ", "Khác"]
    },
    "diem_trung_binh": {
      "description": "Điểm trung bình học tập theo thang 10",
      "type": "number",
      "minimum": 0,
      "maximum": 10
    },
    "dia_chi": {
      "description": "Địa chỉ của sinh viên",
      "type": "object",
      "properties": {
        "thanh_pho": {
          "type": "string"
        },
        "quoc_gia": {
          "type": "string"
        }
      },
      "required": ["thanh_pho", "quoc_gia"]
    }
  },
  "required": ["ho_ten", "tuoi", "diem_trung_binh", "dia_chi"]
}